{
   "$schema": "http://json-schema.org/schema#",
   "id": "dataModels/RestrictedTrafficArea.json",
   "title": "SynchroniCity - Restricted Area Data Model",
   "description": "An area of a city in which the traffic generated by cars or any other kind of vehicles is subjected to limitation",
   "type": "object",
   "required": [
      "id",
      "type",
      "category",
      "name",
      "notAllowedVehicleType"
   ],
   "anyOf": [
      {
         "required": [
            "location"
         ]
      },
      {
         "required": [
            "address"
         ]
      }
   ],
   "allOf": [
      {
         "$ref": "common-schema.json#/definitions/GSMA-Commons"
      },
      {
         "$ref": "common-schema.json#/definitions/Location-Commons"
      },
      {
         "properties": {
            "type": {
               "type": "string",
               "enum": [
                  "RestrictedTrafficArea"
               ],
               "description": "NGSI Entity type"
            },
            "category": {
               "type": "array",
               "items": {
                  "type": "string"
               },
               "minItems": 1,
               "uniqueItems": true
            },
            "notAllowedVehicleType": {
               "type": "array",
               "items": {
                  "type": "string"
               },
               "minItems": 1,
               "uniqueItems": true
            },
            "specialRestrictions": {
               "type": "array",
               "items": {
                  "$ref": "SpecialRestriction.json"
               }
            },
            "restrictionExceptions": {
               "type": "array",
               "items": {
                  "$ref": "RestrictionException.json"
               }
            },
            "restrictionValidityHours": {
               "type": "string"
            },
            "regulation": {
               "type": "string"
            },
            "validityStartDate": {
               "type": "string",
               "format": "date-time"
            },
            "validityEndDate": {
               "type": "string",
               "format": "date-time"
            },
            "security": {
               "type": "array",
               "items": {
                  "type": "string"
               },
               "minItems": 1,
               "uniqueItems": true
            }
         }
      }
   ]
}